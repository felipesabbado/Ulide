<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ulide" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textAppearanceButton">@style/TextAppearance.Ulide.Button</item>
    </style>

    <style name="Theme.Ulide.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Ulide.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Ulide.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--<style name="Theme.Ulide.Tab" parent="ThemeOverlay.MaterialComponents">
        <item name="textAppearanceButton">@style/TextAppearance.Ulide.Button</item>
    </style>-->

    <style name="TextAppearance.Ulide.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textStyle">bold</item>
    </style>
</resources>